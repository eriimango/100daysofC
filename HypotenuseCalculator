// This program calculates the length of the hypotenuse of a right triangle when the other two sides are given.
// author: Ericka H.
#include<stdio.h>
#include<math.h>

int main(void) {

double sumSquare = 0.0;
double hyp; // the hypotenuse side thats calculated
double adj; // adjacent side of the triangle
double opp; // opposite leg of the triangle

printf("Enter the length of the opposite leg of a right triangle: \n");
scanf("%lf", &opp);
printf("Enter the length of the adjacent side of a right triangle: \n");
scanf("%lf", &adj);

sumSquare = (adj *adj) + (opp * opp);
hyp = sqrt(sumSquare);

printf("The hypotenuse of the right triangle is: %f\n", hyp);
printf("\nYour Right Triangle\n     Adjacent side: %f\n     Opposite side: %f\n     Hypotenuse side: %f\n", adj,opp,hyp);

}
